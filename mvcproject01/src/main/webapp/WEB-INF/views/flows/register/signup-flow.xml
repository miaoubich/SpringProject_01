<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/webflow
	  					  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

		<!-- The start state -->
		<view-state id="personal" view="flows/register/signup-personal"></view-state>
		
		<!-- The end state -->
		<end-state id="home1" view="externalRedirect:contextRelative:/" />
		
		<!-- Global transition to break the flow and move to the home page -->
		<global-transitions>
			<transition on="home" to="home1"/>
		</global-transitions>
		
</flow>